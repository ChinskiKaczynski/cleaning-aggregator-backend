{
  "name": "cleaning-companies-aggregator-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "knex": "node --no-warnings=ExperimentalWarning --loader knex-esm-loader.js",
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage",
    "test:sync": "cross-env VITEST_MAX_THREADS=1 vitest",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@types/cheerio": "^0.22.35",
    "cheerio": "^1.0.0",
    "domhandler": "^5.0.3",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.0",
    "https-proxy-agent": "^7.0.6",
    "knex": "^3.1.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.48.1",
    "@types/node": "^22.13.1",
    "@types/node-fetch": "^2.6.12",
    "@types/redis": "^4.0.10",
    "@types/tap": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bun-types": "^1.0.25",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.2.5",
    "tap": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "knex": {
    "esm": true,
    "migrations": {
      "extension": "mjs"
    }
  }
}
